.speaker
  padding-top: 102px
  padding-bottom: 73px
  text-align: center;
  .speakerList
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    mobile-center()
    .speakerWraper
      width: 242px
      height: 326px
      margin: 0 20px
      color: #333
      background-color: rgb(240, 240, 240)
      display: flex
      align-items center
      flex-direction column
      justify-content: center
      margin-bottom 30px
      &:hover
        background-color: #0A0C48
        color: #fff
        &>img
          display: none
        &>.name
