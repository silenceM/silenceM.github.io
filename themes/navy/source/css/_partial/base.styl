.description
  padding-top: 160px
  padding-bottom: 143px
  @media(max-width: 768px)
    padding-top: 80px
    padding-bottom: 71px
  .content
    font-size: 22px
    max-width: 1000px
    margin: 0 auto
    margin-top: 47px
    line-height: 32px
